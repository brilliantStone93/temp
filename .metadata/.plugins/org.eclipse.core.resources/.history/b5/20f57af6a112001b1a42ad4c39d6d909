		c.add("Center", output);
		
		
		
		
		
		
		
		setVisible(true);
		setBounds(100,100,500,500);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		
//		addWindowListener(new WindowAdapter() {
//			@Override
//			public void windowClosing(WindowEvent e) {
//				System.exit(0);
//				
//			}
//		});
		
		
		
		
	}
	
	
	public static void main(String[] args) {
		new TryNotepad();
	}

}

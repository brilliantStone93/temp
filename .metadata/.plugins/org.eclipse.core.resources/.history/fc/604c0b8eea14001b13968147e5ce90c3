package network;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.ArrayList;
import java.util.List;

public class ChatServer {
	private ServerSocket ss;
	private List<ChatHandler> list; // 접속자 수 만큼 생성된 ChatHandler를 담아줄 그릇
	
	public ChatServer() {
		try {
			ss= new ServerSocket(9500);
			list = new ArrayList<ChatHandler>(); 
			
			
			while(true) {
				//클라이언트가 스레드로 돌고 있기 때문에 서버에서도 쓰레드로 돌려줘야 맞으나 그렇게 했을 경우 서버가 여러가지가 생길 수 있다
				//따라서 IO만  스레드로 만들어 주면 된다 이래서 만들어진게 ChatHandler이다
				
				Socket socket  = ss.accept(); // 낚아챈다
				ChatHandler handler = new ChatHandler(socket, list); //
				list.add(handler);
				
				
			}
			
			
			
		} catch (IOException e) {
			
			e.printStackTrace();
		}
		System.out.println("서버 준비완료!");
	
	}
	
	
	public static void main(String[] args) {
		new ChatServer();
	}
}
